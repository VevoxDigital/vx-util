{
  "compilerOptions": {
    "baseUrl": "src/",
    "outDir": "lib/",
    "allowJs": false,
    "target": "es5",
    "strict": true,
    "declaration": true,
    "declarationDir": "lib/",
    "sourceMap": false,
    "inlineSourceMap": true,
    "inlineSources": false,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "listEmittedFiles": false,
    "removeComments": false,
    "downlevelIteration": true,
    "lib": [ "ES2015" ],
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules/**"
  ]
}
