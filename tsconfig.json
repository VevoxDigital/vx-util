{
  "compilerOptions": {
    "baseUrl": "src/",
    "outDir": "lib/",

    "target": "es6",
    "lib": [ "es6" ],
    "module": "commonjs",
    "moduleResolution": "node",

    "declaration": true,
    "declarationDir": "lib/",
    "sourceMap": true,

    "allowJs": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}
