{
  "compilerOptions": {
    "baseUrl": "src/",
    "outDir": ".tmp/lib/",
    "allowJs": false,
    "target": "esnext",
    "strict": true,
    "declaration": true,
    "declarationDir": "lib/",
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "downlevelIteration": true,
    "lib": [ "esnext" ],
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules/**",
    "lib/**"
  ]
}
